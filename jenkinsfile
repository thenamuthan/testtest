pipeline {
    agent any

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm start
                    npm ci
                    mkdir ~/.npm-global
                    export NPM_CONFIG_PREFIX=~/.npm-global
                    export PATH=$PATH:~/.npm-global/bin
                    sudo chown -R $(whoami) ~/.npm
                    npm run build
                '''
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }

            steps {
                sh '''
                    test -f build/index.html
                    npm test
                '''
            }
        }
    }
}
